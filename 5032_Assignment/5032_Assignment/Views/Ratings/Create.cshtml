@model _5032_Assignment.Models.Rating

@{
    ViewBag.Title = "Rate a Doctor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .rating-container {
        max-width: 600px;
        margin: 5% auto;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        background-color: #ffffff;
    }

    .rating-header {
        text-align: center;
        margin-bottom: 20px;
        border-bottom: 1px solid #e7e7e7;
        padding-bottom: 10px;
    }

    .btn-rating {
        background-color: #007BFF;
        color: #ffffff;
        padding: 8px 16px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-rating:hover {
            background-color: #0056b3;
        }
</style>

<div class="rating-container">
    <div class="rating-header">
        <h2>Rate a Doctor</h2>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            @Html.LabelFor(model => model.DoctorID, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.DoctorID, (SelectList)ViewBag.DoctorList, "Select a Doctor", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DoctorID, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Rating1, new { @class = "control-label" })
            @Html.DropDownListFor(model => model.Rating1, (SelectList)ViewBag.RatingOptions, "Select a Rating", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Rating1, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Submit Rating" class="btn-rating" />
        </div>
    }

    <div class="text-center mt-3">
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
