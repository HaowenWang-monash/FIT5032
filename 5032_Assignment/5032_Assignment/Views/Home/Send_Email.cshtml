@model _5032_Assignment.Models.SendEmailViewModel

@{
    ViewBag.Title = "Send Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .email-container {
        max-width: 600px;
        margin: 5% auto;
        padding: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        background-color: #ffffff;
    }

    .email-header {
        text-align: center;
        margin-bottom: 20px;
        border-bottom: 1px solid #e7e7e7;
        padding-bottom: 10px;
    }

    .btn-custom {
        background-color: #007BFF;
        color: #ffffff;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-custom:hover {
            background-color: #0056b3;
        }
</style>

<div class="email-container">
    <div class="email-header">
        <h2>Send Email</h2>
    </div>

    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
    {
        @Html.AntiForgeryToken()

        if (@ViewBag.Result != null)
        {
            <div class="alert alert-info">@ViewBag.Result</div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.ToEmail, new { @class = "form-label" })
            @Html.EditorFor(model => model.ToEmail, new { htmlAttributes = new { @class = "form-control", required = "true" } })
            @Html.ValidationMessageFor(model => model.ToEmail, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Subject, new { @class = "form-label" })
            @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control", required = "true" } })
            @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Contents, new { @class = "form-label" })
            @Html.TextAreaFor(model => model.Contents, new { @class = "form-control", rows = "5", required = "true" })
            @Html.ValidationMessageFor(model => model.Contents, "", new { @class = "text-danger" })
        </div>

        <div class="form-group text-center">
            <input type="submit" value="Send" class="btn-custom" />
        </div>
    }

    <div class="text-center mt-3">
        @Html.ActionLink("Back to Home", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

